<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>
    </Appenders>

    <Loggers>
        <!-- Root Logger -->
        <Root level="INFO">
            <AppenderRef ref="Console"/>
        </Root>

        <!-- Specific logger for WebSocket operations -->
        <Logger name="suduoku.WebSocketServer" level="DEBUG" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>

        <!-- Database operations logger -->
        <Logger name="suduoku.database" level="INFO" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>

        <!-- SuduokuBackend logger -->
        <Logger name="suduoku.SuduokuBackend" level="INFO" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>
    </Loggers>
</Configuration>

